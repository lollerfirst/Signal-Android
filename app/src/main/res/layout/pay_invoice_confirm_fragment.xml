<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/pay_invoice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PaymentsPayInvoice__invoice_details"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>

    <TextView
        android:id="@+id/pay_invoice_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="0 sat"/>

    <TextView
        android:id="@+id/pay_invoice_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 sat"/>

    <TextView
        android:id="@+id/pay_invoice_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 sat"/>

    <TextView
        android:id="@+id/pay_invoice_expiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""/>

    <ProgressBar
        android:id="@+id/pay_invoice_spinner"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/pay_invoice_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/PaymentsPayInvoice__confirm_and_pay"/>

</LinearLayout>
